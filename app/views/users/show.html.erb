<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        
      </h1>
      <%= @user.email %>
    </section>
  </aside>
  
</div>
<div class="row">
  <div class="col-md-2">
    <%= button_to "Edit Profile", "../users/#{params[:id]}/edit", method: :get %>
    </div>
</div>